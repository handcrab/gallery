h1= @album.title
p= @album.description

= render @album.images
= render 'shared/gallery'

- content_for :footer
  = link_to '‚Üê Back to albums', albums_path

  .btn-group.controls.gallery-controls
    = link_to edit_album_path(@album), {class: "btn btn-warning btn-xs"} do
      span.glyphicon.glyphicon-pencil(aria-hidden="true")
      | Edit
    = link_to @album, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" do
      span.glyphicon.glyphicon-remove(aria-hidden="true")
      | Destroy