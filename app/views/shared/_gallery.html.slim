#blueimp-gallery.blueimp-gallery(data-use-bootstrap-modal="false")
  .slides
  / controls
  h3.title
  a.prev ‹
  a.next ›
  a.close ×
  a.play-pause
  ol.indicator

  .modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button' aria-hidden="true") &times;
          h4.modal-title
        .modal-body.next
        .modal-footer
          button.btn.btn-default.pull-left.prev(type='button' aria-hidden="true")
            i.glyphicon.glyphicon-chevron-left Previous
          button.btn.btn-primary.next(type='button' aria-hidden="true")          
            i.glyphicon.glyphicon-chevron-right Next 